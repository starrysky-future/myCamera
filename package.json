{
  "name": "mycamera",
  "version": "1.0.0",
  "description": "一个摄像头软件",
  "main": "./out/main/index.js",
  "author": "seven",
  "homepage": "https://starrysky-future.github.io/blog/",
  "repository": "https://github.com/starrysky-future/myCamera.git",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue,.json --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev -w",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "pack:win": "npm run build && electron-builder --win --config --publish never",
    "pack:mac-x86": "npm run build && electron-builder --mac --config --publish never",
    "pack:mac-arm64": "npm run build && electron-builder --arm64 --mac --config --publish never",
    "pack:linux": "npm run build && electron-builder --linux --config --publish never"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "electron-updater": "^5.3.0",
    "element-plus": "^2.3.3",
    "pinia": "^2.0.34",
    "pinia-plugin-persistedstate": "^3.1.0"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "16.18.21",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "electron": "^22.3.4",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.21",
    "eslint": "^8.36.0",
    "eslint-plugin-vue": "^9.10.0",
    "prettier": "^2.8.7",
    "sass": "^1.62.0",
    "sass-loader": "^13.2.2",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vue": "^3.2.47",
    "vue-tsc": "^1.2.0"
  }
}
